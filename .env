# Auth
HF_TOKEN=

# Hugging Face cache (persist this path)
# HF_HOME=/workspace/huggingface-cache

# API auth
SECRET_TOKEN=changeme

# Model config
MODEL_NAME=zai-org/GLM-4.6
TORCH_DTYPE=bf16
TRUST_REMOTE_CODE=true

# Parallel mode selection:
# - tp: use tensor-parallel tp_plan="auto" (requires torchrun)
# - device_map: use DEVICE_MAP in a single process
PARALLEL_MODE=tp
TP_FALLBACK_TO_DEVICE_MAP=false
DEVICE_MAP=auto

# Attention implementation (sdpa, flash_attention_2, eager)
ATTN_IMPLEMENTATION=sdpa

# Tokenization/padding
TOKENIZER_PADDING_SIDE=left
PAD_TO_MULTIPLE_OF=64
MAX_INPUT_TOKENS=512
ALLOWED_MAX_NEW_TOKENS=64,128,256,512

# Optional advanced optimization
STATIC_KV_CACHE=false

# Constrained vocab prebuild
PREBUILD_PREFIX=true
PREBUILD_WORD_COUNTS=3000
PREBUILD_LANGS=es

# Batch job
BATCH_JOB_PIPELINE_SIZE=8
